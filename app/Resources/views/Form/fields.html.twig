{% block field_row %}
    {% spaceless %}
        <div id="{{ form.get('id') }}" class="control-group{% if errors|length > 0 %} error{% endif %}">
            {{ form_label(form, label|default(null), { 'attr': { 'class': 'sr-only' }}) }}
            <div class="controls">
                {{ form_widget(form, { 'attr': {'placeholder':'Email address'} }) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock field_row %}