<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {#{{ form_widget(form) }}#}
    <div>
        {{ form_start(form, {'attr': {'class': 'fos_user_registration_register', 'id': 'register-form'} }) }}

        {{ form_widget(form.username, { 'attr': {'type':'text', 'autofocus':"", 'placeholder':'User Name','class': 'form-control'} }) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.email, { 'attr': {'type':'text', 'autofocus':"", 'placeholder':'Email','class': 'form-control'} }) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.plainPassword.first, { 'attr': {'type':'password',  'placeholder':'Password','class': 'form-control'} }) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.second, { 'attr': {'type':'password',  'placeholder':'Password','class': 'form-control'} }) }}
        {{ form_widget(form.plainPassword.second) }}
        <div>
            <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block">Register</button>
        </div>
        {{ form_rest(form) }}
    </div>
</form>
