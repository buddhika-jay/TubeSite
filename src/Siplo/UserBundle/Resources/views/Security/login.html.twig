{% extends "@SiploUser/siplo_user_form_layout.html.twig" %}
{% block form%}
    {% block fos_user_content %}
        {% if error %}
            <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
                        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                            <h2 class="form-signin-heading">Please sign in</h2>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                            <label for="username" class="sr-only">User Name</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" autofocus="" placeholder="User Name" >

                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password" >

                            <div class="checkbox">
                                <label>
                                    {#<input value="remember-me" type="checkbox"> Remember me#}
                                    <input type="checkbox" id="remember-me" name="_remember_me" value="on" />
                                    <label for="remember-me">Remember Me</label>
                                </label>
                            </div>
                            <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block">Sign in</button>

                            <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                Sign Up Here
                            </a>
                        </form>
    {% endblock fos_user_content %}
{% endblock form%}