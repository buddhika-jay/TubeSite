{% endblock %}


    {% block media_content %}
        {{ path }}
        <div class = "vid-container">
            <video id="video" class="video-js vjs-default-skin" controls preload="none" width="640" height="450"
                   poster=" "
                   data-setup="{}">
                <source src="{{ asset(path)}}" type='video/mp4' />
                <source src="{{ asset(path)}}" type='video/webm' />
