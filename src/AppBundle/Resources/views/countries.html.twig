{% extends '@App/menu.html.twig' %}
{% block media_content %}
    <div id="contact-us" class="parallax" style="padding-bottom: 0;">
        <div  class="container-fluid"style="background: rgba(0,0,0,.46)">

                <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                </div>
            <div class="col-sm-10 col-lg-10">
                {% set count=0 %}
                {%  for country in countries|sort %}
                    {#create a new row for 3 countries#}
                    {% if count is divisibleby(4) %}
                        {% if count>0 %}
                            </div>
                        {% endif %}
                        <div class="row" style="padding-left:6%;padding-right:1%;padding-bottom: 2px">
                    {% endif %}
                    {#show country#}
                    <div class="col-sm-3 col-lg-3" style="padding-left: 0;padding-right: 0">
                         <a href="{{ country.code }}">
                            <div id="container">

                                 <div id="inner-container">
                                    <img id="flag" src="{{ vich_uploader_asset(country, 'flag') }}"/>
                                    <div>
                                    <p id="text">
                                        {{ country.name }}
                                    </p>
                                    </div>
                                </div>
                                <img id="image" src="{{ vich_uploader_asset(country, 'backgroundImage') }}" alt="{{ country.name }}" />

                            </div>
                         </a>
                          </div>

                {% set count=count+1 %}
                {% endfor %}
            </div>
            </div>
            <div class="col-sm-2 col-lg-2">
                <div id="country_list" class="list-group">
                    {%  for country in countries %}
                        <a href="{{ country.code }}" id="country_list_item" class="list-group-item">

                            <img id="flag_list" src="{{ vich_uploader_asset(country, 'flag') }}"/>

                            <ul style="padding-left: 22%">{{ country.name }}</ul>
                        </a>


                    {% endfor %}

                </div>
            </div>
        </div>

{% endblock %}
