{% extends '@App/menu.html.twig' %}
{% block media_content %}
    <div id="contact-us" class="parallax" >
        <div  class="container-fluid"style="background: rgba(0,0,0,.46)">

                <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="300ms">
                </div>
            <div class="col-sm-10 col-lg-10">
                {% set count=0 %}
                {%  for category in categories %}
                    {#create a new row for 3 categories#}
                    {% if count is divisibleby(3) %}
                        {% if count>0 %}
                            </div>
                        {% endif %}
                        <div class="row" style="padding-left:7%;padding-right:5%;padding-bottom: 2%">
                    {% endif %}
                    {#show category#}
                    <div class="col-sm-3 col-lg-4">
                         <a href="{{ category.code }}">
                            <div id="container">

                                <img id="image" src="{{ vich_uploader_asset(category, 'backgroundImage') }}" alt="{{ category.name }}" />
                                <div id="inner-container">
                                    <p id="text">
                                        {{ category.name }}
                                    </p>
                                </div>
                            </div>
                         </a>
                     </div>
                {% set count=count+1 %}
                {% endfor %}
            </div>
            </div>

        </div>
    </div>

{% endblock %}
